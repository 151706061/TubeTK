<?xml version="1.0" encoding="utf-8"?>
<executable>

  <category>Filtering</category>
  <title>Compare Image With Prior</title>
  <description>
    Compare an image with a known prior to create a goodness of fit
    map.
  </description>
  <version>0.1.0</version>
  <documentation-url>http://public.kitware.com/Wiki/TubeTK</documentation-url>
  <license>Apache 2.0</license>
  <contributor>Patrick Reynolds, Kitware</contributor>
  <acknowledgements>
    This work is part of the TubeTK project at Kitware
  </acknowledgements>

  <parameters>
    <label>IO</label>
    <description>Input/output parameters</description>
    <image>
      <name>inputVolume</name>
      <label>Input Volume</label>
      <channel>input</channel>
      <index>0</index>
      <description>Input volume</description>
    </image>
    <image>
      <name>priorVolume</name>
      <label>Prior Volume</label>
      <channel>prior</channel>
      <index>1</index>
      <description>Prior Volume</description>
    </image>
    <image>
      <name>outputVolume</name>
      <label>Output Volume</label>
      <channel>output</channel>
      <index>2</index>
      <description>Output Volume</description>
    </image>
  </parameters>

  <parameters>
    <label>Region Selection</label>
    <integer>
      <name>regionRadius</name>
      <label>Sub-Region Radius</label>
      <description>
	The radius of each sub-region in the evaluation.
      </description>
      <longflag>regionRadius</longflag>
      <flag>r</flag>
      <default>148</default>
    </integer>
    <double>
      <name>threshold</name>
      <label>Threshold Size</label>
      <description>
	The threshold value used to select candidate pixels in the input 
	volume.
      </description>
      <longflag>threshold</longflag>
      <flag>t</flag>
      <default>0</default>
    </double>
    <integer>
      <name>histogramSize</name>
      <label>Histogram Size</label>
      <description>
	The length of each size of the per-sample histogram
      </description>
      <longflag>histogramSize</longflag>
      <flag>i</flag>
      <default>100</default>
    </integer>
    <integer>
      <name>skipSize</name>
      <label>Skip Size</label>
      <description>
	The length of the stride in each dimesion to make this thing doable.
      </description>
      <longflag>skipSize</longflag>
      <flag>k</flag>
      <default>10</default>
    </integer>
    <string>
      <name>mean</name>
      <label>Mean Histogram</label>
      <description>A precomputed mean histogram.</description>
      <longflag>mean</longflag>
      <flag>m</flag>
      <default>nil</default>
    </string>
    <string>
      <name>stdev</name>
      <label>Stdev Histogram</label>
      <description>A precomputed standard deviation histogram.</description>
      <longflag>stdev</longflag>
      <flag>s</flag>
      <default>nil</default>
    </string>
    <string>
      <name>scoringMethod</name>
      <label>Z Scoring Method</label>
      <description>Which interpretation of the Z Score to use. The options are histogram, max, and sum.</description>
      <longflag>scoringMethod</longflag>
      <flag>z</flag>
      <default>sum</default>
    </string>
  </parameters>

</executable>
