<?xml version="1.0" encoding="utf-8"?>
<executable>

  <category>OpenIGTLink</category>
  <title>Crop</title>
  <description>Establish socket communication path and send randomly generated position information.</description>
  <version>0.1.0.$Revision: 2104 $(alpha)</version>
  <documentation-url>http://public.kitware.com/Wiki/TubeTK</documentation-url>
  <license>Apache 2.0</license>
  <contributor>Andinet Enquobahrie, Kitware</contributor>
  <acknowledgements>This work is part of the TubeTK project at Kitware</acknowledgements>

  <parameters>
    <label>Input</label>
    <description>Server Socket Information</description>
    <integer>
      <name>port</name>
      <label>Port</label>
      <channel>input</channel>
      <index>0</index>
      <default>18000</default>
      <description>Port </description>
    </integer>
    <integer>
      <name>duration</name>
      <label>Duration </label>
      <channel>input</channel>
      <index>1</index>
      <default>-1</default>
      <description>Duration (in seconds) for keeping sending the coordinates without getting response from the client. A negative value means keep sending without stopping.</description>
    </integer>
  </parameters>

  <parameters>
    <label>Transmission parameters </label>
    <float>
      <name>frequency</name>
      <label>Frequency </label>
      <description>Frequency to send the coordinates </description>
      <longflag>frequency</longflag>
      <flag>f</flag>
      <default>10</default>
    </float>
  </parameters>

  <parameters>
    <label>Duration parameters </label>
  </parameters>

</executable>
