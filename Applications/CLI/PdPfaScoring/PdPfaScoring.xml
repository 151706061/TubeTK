<?xml version="1.0" encoding="utf-8"?>
<executable>

  <category>Scoring</category>
  <title>Pd Pfa Scoring</title>
  <description>
    Return probability of detection and probability of false alarms 
    based on a prior and known modifications to a prior.
  </description>
  <version>0.1.0.$Revision: 2104 $(alpha)</version>
  <documentation-url>http://public.kitware.com/Wiki/TubeTK</documentation-url>
  <license>Apache 2.0</license>
  <contributor>Patrick Reynolds, Kitware</contributor>
  <acknowledgements>This work is part of the TubeTK project at Kitware</acknowledgements>

  <parameters>
    <label>IO</label>
    <description>Input/output parameters</description>
    <image>
      <name>inputVolume</name>
      <label>Input Volume</label>
      <channel>input</channel>
      <index>0</index>
      <description>Input volume</description>
    </image>
    <image>
      <name>inputPrior</name>
      <label>Input Prior</label>
      <channel>input</channel>
      <index>1</index>
      <description>Input Prior</description>
    </image>
    <image>
      <name>modifiedPrior</name>
      <label>Modified Prior</label>
      <channel>input</channel>
      <index>2</index>
      <description>Modified Prior</description>
    </image>
  </parameters>

  <parameters>
    <label>Feature Size</label>
    <double>
      <name>featureSize</name>
      <label>Feature Size</label>
      <description>The feature size in the design file guides scoring results.</description>
      <longflag>featureSize</longflag>
      <flag>f</flag>
      <default>35</default>
    </double>
  </parameters>

</executable>
