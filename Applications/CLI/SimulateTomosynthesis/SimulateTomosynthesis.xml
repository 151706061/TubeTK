<?xml version="1.0" encoding="utf-8"?>
<executable>

  <category>Filtering</category>
  <title>Simulate Tomosynthesis</title>
  <description>Simulate the effects of tomosynthesis on a binary mask by erosion, dilation, and blurring.</description>
  <version>0.1.0.$Revision: 2104 $(alpha)</version>
  <documentation-url></documentation-url>
  <license></license>
  <contributor>Stephen R. Aylward</contributor>
  <acknowledgements>This work was funded, in part, by USC:EXPOSE.</acknowledgements>

  <parameters>

    <label>IO</label>
    <description>Input/output parameters</description>
    <image>
      <name>inputVolume</name>
      <label>Input Volume</label>
      <channel>input</channel>
      <index>0</index>
      <description>Input volume</description>
    </image>
    <image>
      <name>outputVolume</name>
      <label>Output Volume</label>
      <channel>output</channel>
      <index>1</index>
      <description>Tomosynthesis Volume</description>
    </image>

  </parameters>
  <parameters>

    <label>Input Image</label>
    <description>Info about the input image</description>
    <float>
      <name>foreground</name>
      <label>Foreground intensity</label>
      <flag>f</flag>
      <description>Foreground intensity value, i.e., object value</description>
      <longflag>foreground</longflag>
      <default>1</default>
    </float>
    <float>
      <name>background</name>
      <label>Background intensity</label>
      <flag>b</flag>
      <description>Background intensity value</description>
      <longflag>background</longflag>
      <default>0</default>
    </float>

  </parameters>
  <parameters>

    <label>Tomosynthesis parameters</label>
    <description>Params of forming the tomo image</description>
    <integer>
      <name>erodeRadius</name>
      <label>Erosion radius</label>
      <flag>e</flag>
      <description>Sphere radius for erode operation</description>
      <longflag>erodeRadius</longflag>
      <default>1</default>
    </integer>
    <integer>
      <name>dilateRadius</name>
      <label>Dilation radius</label>
      <flag>d</flag>
      <description>Sphere radius for dilate operation</description>
      <longflag>dilateRadius</longflag>
      <default>1</default>
    </integer>
    <boolean>
      <name>erodeDilate</name>
      <label>Erode and then dilate</label>
      <longflag>erodeDilate</longflag>
      <description>Perform erosion and then dilation instead of default dilation then erosion.</description>
      <default>false</default>
    </boolean>
    <double>
      <name>gaussianBlurStdDev</name>
      <label>Gaussian blur std. dev.</label>
      <flag>g</flag>
      <description>Standard deviation of the Gaussian kernel used to blur the binary mask</description>
      <longflag>gaussianBlurStdDev</longflag>
      <default>1.0</default>
    </double>

  </parameters>
  <parameters>

    <label>Output Image</label>
    <description>Info about the output image</description>
    <double>
      <name>outScale</name>
      <label>Output intensity scaling</label>
      <flag>s</flag>
      <description>Scaling factor to apply to the output intensities</description>
      <longflag>outScale</longflag>
      <default>1.0</default>
    </double>
    <double>
      <name>outOffset</name>
      <label>Output intensity offset</label>
      <flag>o</flag>
      <description>Offset factor to apply to the output intensities</description>
      <longflag>outOffset</longflag>
      <default>0.0</default>
    </double>

  </parameters>

</executable>
