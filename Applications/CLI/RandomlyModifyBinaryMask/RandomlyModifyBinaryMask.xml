<?xml version="1.0" encoding="utf-8"?>
<executable>

  <category>Filtering</category>
  <title>Randomly Modify Binary Mask</title>
  <description>Randomly apply erosion, dilation, removal, and insertion to random regions of a binary mask</description>
  <version>0.1.0.$Revision: 2104 $(alpha)</version>
  <documentation-url>http://public.kitware.com/Wiki/TubeTK</documentation-url>
  <license>Apache 2.0</license>
  <contributor>Stephen R. Aylward, Kitware</contributor>
  <acknowledgements>This work is part of the TubeTK project at Kitware</acknowledgements>

  <parameters>
    <label>IO</label>
    <description>Input/output parameters</description>
    <image>
      <name>inputVolume</name>
      <label>Input Volume</label>
      <channel>input</channel>
      <index>0</index>
      <description>Input volume</description>
    </image>
    <image>
      <name>outputVolume</name>
      <label>Output Volume</label>
      <channel>output</channel>
      <index>1</index>
      <description>Output Volume</description>
    </image>
  </parameters>

  <parameters>
    <label>Options</label>
    <double>
      <name>foreground</name>
      <label>Foreground</label>
      <description>Foreground intensity value</description>
      <longflag>foreground</longflag>
      <flag>f</flag>
      <default>255</default>
    </double>
    <double>
      <name>background</name>
      <label>Background</label>
      <description>Background intensity value</description>
      <longflag>background</longflag>
      <flag>b</flag>
      <default>0</default>
    </double>
    <integer>
      <name>numberOfRegions</name>
      <label>Number of regions</label>
      <description>Number of random regions to modify</description>
      <longflag>numberOfRegions</longflag>
      <flag>n</flag>
      <default>10</default>
    </integer>
    <integer>
      <name>minEffectSize</name>
      <label>Min effect size</label>
      <description>Min size of the effect for each random operation</description>
      <longflag>minEffectSize</longflag>
      <flag>m</flag>
      <default>6</default>
    </integer>
    <integer>
      <name>maxEffectSize</name>
      <label>Max effect size</label>
      <description>Max size of the effect for each random operation</description>
      <longflag>maxEffectSize</longflag>
      <flag>M</flag>
      <default>10</default>
    </integer>
  </parameters>
  <parameters>
    <label>Testing</label>
    <integer>
      <name>seed</name>
      <label>Seed</label>
      <description>Specify a seed to make runs repeatable (-1 = rnd seed)</description>
      <longflag>seed</longflag>
      <flag>s</flag>
      <default>-1</default>
    </integer>
  </parameters>

</executable>
