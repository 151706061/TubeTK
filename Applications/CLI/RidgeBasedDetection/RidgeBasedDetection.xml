<?xml version="1.0" encoding="utf-8"?>
<executable>

  <category>Filtering</category>
  <title>Sample CLI Application</title>
  <description>Demonstration of how to write a CLI application.  Performs blurring.</description>
  <version>0.1.0.$Revision: 2104 $(alpha)</version>
  <documentation-url>http://public.kitware.com/Wiki/TubeTK</documentation-url>
  <license>Apache 2.0</license>
  <contributor>Stephen R. Aylward, Kitware</contributor>
  <acknowledgements>This work is part of the TubeTK project at Kitware</acknowledgements>

  <parameters>
    <label>IO</label>
    <description>Input/output parameters</description>
    <image>
      <name>inputVolume</name>
      <label>Input Volume</label>
      <channel>input</channel>
      <index>0</index>
      <description>Input volume</description>
    </image>
    <image>
      <name>inputPrior</name>
      <label>Input Prior</label>
      <channel>input</channel>
      <index>1</index>
      <description>Input prior</description>
    </image>
    <image>
      <name>inputDefects</name>
      <label>Input Defects</label>
      <channel>input</channel>
      <index>2</index>
      <description>Input Defects</description>
    </image>
    <image>
      <name>inputCenterlines</name>
      <label>Input Centerlines</label>
      <channel>input</channel>
      <index>3</index>
      <description>Input Centerlines</description>
    </image>
    <string>
      <name>outputFile</name>
      <label>Output ARFF File</label>
      <channel>input</channel>
      <index>4</index>
      <description>Output ARFF File for WEKA</description>
    </string>
  </parameters>

  <parameters>
    <label>Ridgeness</label>
    <double>
      <name>scale</name>
      <label>Ridgness Scale</label>
      <description>The scale for evaluating ridgeness</description>
      <longflag>scale</longflag>
      <flag>s</flag>
      <default>1.0</default>
    </double>
  </parameters>

</executable>
