<?xml version="1.0" encoding="utf-8"?>
<executable>

  <category>Filtering</category>
  <title>Compute Z-map (TubeTK)</title>
  <description>Computes Z-map.</description>
  <version>0.1.0.$Revision: 2104 $(alpha)</version>
  <documentation-url>http://public.kitware.com/Wiki/TubeTK</documentation-url>
  <license>Apache 2.0</license>
  <contributor>Patrick Reynolds, Kitware</contributor>
  <acknowledgements>This work is part of the TubeTK project at Kitware</acknowledgements>

  <parameters>
    <label>IO</label>
    <description>Input/output parameters</description>
    <image>
      <name>inputVolume1</name>
      <label>Input Volume 1</label>
      <channel>input</channel>
      <index>0</index>
      <description>Input volume 1</description>
    </image>
    <image>
      <name>inputVolume2</name>
      <label>Input Volume 2</label>
      <channel>input</channel>
      <index>1</index>
      <description>Input volume 2</description>
    </image>
    <image>
      <name>outputVolume</name>
      <label>Output Volume</label>
      <channel>output</channel>
      <index>2</index>
      <description>Output Volume</description>
    </image>
  </parameters>

  <parameters>
    <label>Sampling</label>
    <integer>
      <name>samples</name>
      <label>samples</label>
      <description>Number of Samples to use in the random calculation</description>
      <longflag>samples</longflag>
      <flag>s</flag>
      <default>1000000</default>
    </integer>
    <integer>
      <name>seed</name>
      <label>Random number seed</label>
      <description>Seed value to use in the random iterator (-1 means use no seed).</description>
      <longflag>seed</longflag>
      <flag>S</flag>
      <default>-1</default>
    </integer>
    <image>
      <name>trainMaskVolume</name>
      <label>Training mask</label>
      <description>Binary mask of pixels to be used for training</description>
      <longflag>trainMaskVolume</longflag>
      <channel>input</channel>
    </image>
    <image>
      <name>testMaskVolume</name>
      <label>Testing mask</label>
      <description>Binary mask of pixels to be used for testing</description>
      <longflag>testMaskVolume</longflag>
      <channel>input</channel>
    </image>
  </parameters>
  <parameters>
    <label>Histograms</label>
    <boolean>
      <name>forceLinearHistogram</name>
      <label>Force linear histogram</label>
      <description>Adjust each pixel's histogram to have a linear distribution in the joint-histogram space</description>
      <longflag>forceLinearHistogram</longflag>
      <default>false</default>
    </boolean>
    <image>
      <name>loadMeanVolume</name>
      <label>Mean</label>
      <description>Mean joint histogram</description>
      <longflag>loadMeanVolume</longflag>
      <channel>input</channel>
    </image>
    <image>
      <name>loadStdDevVolume</name>
      <label>Standard deviation</label>
      <description>Standard deviation joint histogram</description>
      <longflag>loadStdDevVolume</longflag>
      <channel>input</channel>
    </image>
    <image>
      <name>saveMeanVolume</name>
      <label>Mean</label>
      <description>Mean joint histogram</description>
      <longflag>saveMeanVolume</longflag>
      <channel>output</channel>
    </image>
    <image>
      <name>saveStdDevVolume</name>
      <label>Standard deviation</label>
      <description>Standard deviation joint histogram</description>
      <longflag>saveStdDevVolume</longflag>
      <channel>output</channel>
    </image>
  </parameters>
</executable>
